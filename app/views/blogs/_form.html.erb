<style type="text/css">

trix-editor {
  border: 1px solid #bbb;
  border-radius: 3px;
  margin: 0;
  padding: 0.4em 0.6em;
  min-height: 200px;
  outline: none;
}

</style>

<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Blog Title</label>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Summary</label>
    <%= f.text_field :bleb, :class => "form-control" %>
  </div>

  <br>
  <label>Blog Post Body</label>
  <%= f.trix_editor :body, :rows => "7", :class => "form-control" %>
  <br>

   <div class="form-group">
    <label>Blog Image</label>
    <%= f.file_field :blogimage, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Select Blog Category</label><br>
   <%= f.collection_select :tag_ids, Tag.all, :id, :name, {prompt: "Blog Category"}, 
    {:required => true, class: "select", style: "width: 30%;"} %>
  </div>

  <div class="form-group">
    <label>Video Link</label>
    <%= f.text_field :videolink, :class => "form-control" %>
  </div>

  

  <div class="form-group">
    <label>Meta Description</label>
    <%= f.text_field :metadescription, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Meta Keywords</label>
    <%= f.text_field :metakeywords, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success" %>
  </div>
<% end %>
