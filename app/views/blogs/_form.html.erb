<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Project Owner:</label><br>
   <%= f.collection_select :tag_ids, Tag.all, :id, :name, {prompt: "Blog Tag"}, 
    {:required => true, class: "select", style: "width: 100%;"} %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :blogimage %>
    <%= f.file_field :blogimage %>
  </div>

  <div class="field">
    <%= f.label :videolink %>
    <%= f.text_field :videolink %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.number_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :metadescription %>
    <%= f.text_field :metadescription %>
  </div>

  <div class="field">
    <%= f.label :metakeywords %>
    <%= f.text_field :metakeywords %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
