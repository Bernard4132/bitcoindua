<style type="text/css">

.aduins{
 background:linear-gradient(0deg,rgba(0,0,0,0.8),rgba(0,0,0,0.1)),url(<%= @tag.tagimage %>);
  background-position:center;
  min-height: 200px;
  margin-top: 50px;
}

.blogpart{
  width: 100%;
  background-color: white;
  padding: 20px;
  margin-top: 15px;
  -webkit-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  -moz-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
}

@media only screen and (min-width : 100px) and (max-width : 600px) {

.aduins{
  margin-top: 0px;
}

}

</style>


<section class="aduins">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 style="text-align: center; color: white; position: relative; top: 65px; font-weight: 900;  text-shadow: 1px 0px 6px rgba(0, 0, 0, 1);"><%= @tag.name %></h1>
      </div>
    </div>
  </div>
</section>

<div class="blogsection">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-12">
      <h5>All blog Posts</h5>
      <div class="blogpart">
       <%= render @tagblogs %>
      </div>
    </div>
    </div>
  </div>
</div>