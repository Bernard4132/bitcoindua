<style type="text/css">

.constyle{
	padding: 7px; 
	border-radius: 5px; 
	background-color: #ffffff; 
	border: 1px solid #d9d9d9; 
	margin: 10px;
	
}


.blogpart{
  width: 100%;
  background-color: white;
  padding: 20px;
  margin-top: 15px;
  -webkit-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  -moz-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
  box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.21);
}


</style>

<body style="background-color: #f2f2f2;"

<br><br><br><br>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<p style="text-align: center; font-weight: 300;">Hello Admin, you are welcome to your dashboard. Manage your projects and clients from Here.</p>
			<p style="text-align: center;">
				<a href="/blogs/new" class="btn btn-primary">New Blog Post</a>
				<a href="/tags/new" class="btn btn-warning">New Blog Tag</a>
			</p>
			<br>
			<hr>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-6 col-md-12">
			<h5>All blog Posts</h5>
			<div class="blogpart">
			 <%= render @allblogs %>
			</div>
		</div>
		<div class="col-lg-6 col-md-12">
			<div class="row">
				<div class="col-lg-12">
					<h5>All Users</h5>
			<% @allusers.each do |user| %>
             <p class="constyle">
             <span><%= user.email %></span><br>
             
             </p>
			<% end %>
				</div>
			</div>

            <div class="row" style="margin-top: 15px;">
				<div class="col-lg-12">
					<h5>All Subscriptions</h5>
			<% @allsubscriptions.each do |subscription| %>
             <p class="constyle">
             <span><%= subscription.title %></span><br>
             <span><%= link_to "Subscription", subscription %></span>
             </p>
			<% end %>
				</div>
			</div>

			<div class="row" style="margin-top: 15px;">
				<div class="col-lg-12">
				<h5>All Tags</h5>
			<% @alltags.each do |tag| %>
             <p class="constyle">
             <span><%= tag.name %></span><br>
             <span><%= link_to "Tag", tag %></span>
             </p>
			<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<hr>
<br><br>

</body>